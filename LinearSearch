int main(void) {
	int arr[] = { 1,2,3,4,5 };

	int idx = LSearch(arr, sizeof(arr)/sizeof(int), 4);
	if (idx == -1) {
		printf("탐색  실패\n");

	}
	else {
		printf("%d\n", idx);

	}
	idx = LSearch(arr, sizeof(arr) / sizeof(int), 6);
	if (idx == -1) {
		printf("탐색  실패\n");

	}
	else {
		printf("%d\n", idx);

	}
	return 0;
}
